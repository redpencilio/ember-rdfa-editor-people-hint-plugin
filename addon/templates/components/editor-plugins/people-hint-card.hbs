<div class="modal-dialog__header">
  <div class="grid">
    <div class="col--10-12">
      <p class="u-spacer--tiny">
        Selecteer de persoon <br>
        huidige persoon <strong>{{info.plainValue}}</strong>
        resource: {{info.resource}}
      </p>
    </div>
    {{!--       <div class="col--2-12 u-align-right">
            <a class="link--icon--close" href="#">
            <span class="u-visually-hidden">Venster sluiten</span>
            </a>
            </div> --}}
  </div>
</div>

<div class="modal-dialog__content">
  <ul class="w-full">
    {{!-- TODO: Take care of pagination --}}
    {{#each hintPlugin.people as |person|}}
      <li class="link-list__item {{if (eq selectedPerson person) "border border-teal-500"}}">
        <a {{action (mut selectedPerson) person}}
          class="{{if (eq selectedPerson person) "text-teal-300" "text-gray-300"}}">
          {{person.firstname}} {{person.lastname}}
        </a>
      </li>
    {{/each}}
  </ul>
</div>

<div class="modal-dialog__footer">
  {{#wu-button-group}}
    {{wu-button label="Vervangen"
      onClick=(action "insert")
      command="ctrl + j"
      commandLocation="below"}}

    {{!-- {{wu-button label="Negeer"
      onClick=null
      size="tiny"
      isLink=true
      isDark=true
      isNarrow=true
      command="esc"
      commandLocation="below"}} --}}
  {{/wu-button-group}}
</div>

{{yield}}
